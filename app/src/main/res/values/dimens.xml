<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Some common space sizes to use in the layout-->
    <dimen name="very_small_space">4dp</dimen>
    <dimen name="small_space">8dp</dimen>
    <dimen name="medium_space">12dp</dimen>
    <dimen name="large_space">16dp</dimen>
    <dimen name="very_large_space">32dp</dimen>

    <!-- Fixed size for main weather icon -->
    <dimen name="main_icon_size">96dp</dimen>

    <!-- Fixed size for list icons -->
    <dimen name="list_icon_size">40dp</dimen>

    <!-- Text size of the primary weather info text such as City name & Today's date -->
    <dimen name="primary_normal_text_size">20sp</dimen>

    <!-- We use "dp" here rather than "sp" because this is already large enough font size!
        going larger will cause lots of problems in the user interface -->
    <dimen name="forecast_item_text_size">28dp</dimen>


</resources>